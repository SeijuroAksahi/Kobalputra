<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_backprofile" />

        <ImageButton
            android:id="@+id/btn_keProfilKom"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="24dp">

                 />

            <TextView
                android:id="@+id/txt_dialogNamaKom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Nama Tempat"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_dialogTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_dialogNamaKom"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Deskripsi"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_dialogJoinKom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CEF6EC"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text="Close"
                android:visibility="visible"
                android:layout_below="@+id/txt_dialogTag"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>